{
  "manifest_version": "0.0.0.1",
  "name": "Headliner",
  "homepage_url": "https://github.com/farnazj/Replace-Previews",
  "description": "A browser extension that helps you write better, more informative news headlines as you read news articles to help your friends and to see the alternative headlines that your friends post wherever you encounter those articles.",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_globs": [ 
        "http://trustnet.csail.mit.edu/*",
        "https://trustnet.csail.mit.edu/*"
       ],
      "js": ["js/content-script.js"],
      "css": ["css/main.css"]
    }
  ],
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
